%h1
  Listing entries for
  = @date.to_s

.row
  .span9
    %table
      %tr
        %th Entry
        %th
        %th
        %th

      - @entries.each do |entry|
        %tr
          %td= entry.project.title
          %td= link_to 'Show', entry
          %td= link_to 'Edit', edit_entry_path(entry)
          %td= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }

  .span3
    #datepicker{data: {url: "#{entries_path}", current: "#{@date.to_s(:iso)}"}}



.row
  .span12
    = link_to 'New Entry', new_entry_path, :class => "btn btn-primary", :id => "new-entry"
