= simple_form_for @customer, :html => {:class => "form-horizontal"} do |f|
  = render :partial => "shared/form_errors", :object => @customer

  .control-group
    = f.label :name
    .controls
      = f.text_field :name, :class => "input-xxlarge"
  .control-group
    = f.label :comment
    .controls
      = f.text_area :comment, :class => "input-xxlarge", :rows => 4, :cols => 80
  .form-actions
    = f.submit 'Save', :class => "btn btn-primary"
    = link_to "Back", customers_path, :class => "btn"
