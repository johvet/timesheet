.well
  %h1= I18n.t("user.session.header")

  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-horizontal"}) do |f|

    .form-inputs
      = f.input :email, :required => false, :autofocus => true
      = f.input :password, :required => false

      = f.input :remember_me, :as => :boolean, :inline_label => I18n.t(:remember_me, scope: [:activerecord, :attributes, :user]), :label => false if devise_mapping.rememberable?

    .form-actions.no-border
      = f.button :submit, I18n.t("user.session.submit"), class: "btn btn-primary"

      = render "devise/shared/links"
