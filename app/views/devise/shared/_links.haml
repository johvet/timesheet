- links = []

- if controller_name != 'sessions'
  - links << {label: I18n.t('user.session.submit'), url: new_session_path(resource_name)}

- if devise_mapping.registerable? && controller_name != 'registrations'
  - links << {label: "Sign up", url: new_registration_path(resource_name)}

- if devise_mapping.recoverable? && controller_name != 'passwords'
  - links << {label: "Forgot your password?", url: new_password_path(resource_name)}

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  - links << {label: "Didn't receive confirmation instructions?", url: new_confirmation_path(resource_name)}

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  - links << {label: "Didn't receive unlock instructions?", url: new_unlock_path(resource_name)}

- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    - links << {label: "Sign in with #{provider.to_s.titleize}", url: omniauth_authorize_path(resource_name, provider)}

- unless links.empty?
  %ul.devise-links
    - links.each do |item|
      %li
        = link_to item[:label], item[:url]