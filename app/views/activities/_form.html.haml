= simple_form_for @activity, :html => {:class => "form-horizontal"} do |f|
  = render :partial => "shared/form_errors", :object => @activity

  = f.input :name
  = f.input :chargeable

  .form-actions
    = f.submit 'Save', :class => "btn btn-primary"
    = link_to "Back", projects_path, :class => "btn"
